<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td><b>Nome</b></td>
            <td><b>Descrição</b></td>
            <td><b>Preço</b></td>
            <td><b>Quantidade</b></td>
        </tr>
    </thead>
    <tbody>
        <% @produtos.each do |produto| %>
            <tr>
                <td><%= produto.nome %></td>
                <td><%= produto.descricao %></td>
                <td><%= produto.preco %></td>
                <td><%= produto.quantidade %></td>
                <td colspan="1"><%= button_to "Remover", produto, method: :delete, class:"btn btn-danger", data: {confirm: "Confirma a exclusão do produto #{produto.nome}?"} %></td>                   
            </tr>
        <% end %>
    </tbody>
</table>
<div class="alert alert-success" role="alert">
